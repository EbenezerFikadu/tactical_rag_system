{
  "model": {
    "embedding_model": "all-MiniLM-L6-v2",
    "llm_model": "HuggingFaceH4/zephyr-7b-beta",
    "quantization": "4bit",
    "max_length": 512
  },
  "retrieval": {
    "chunk_size": 512,
    "chunk_overlap": 50,
    "top_k": 2,
    "similarity_threshold": 0.7
  },
  "vector_store": {
    "type": "chromadb",
    "collection_name": "tactical_documents",
    "persist_directory": "./vector_store"
  },
  "memory": {
    "batch_size": 4,
    "enable_gc": true,
    "monitor_memory": true
  }
}